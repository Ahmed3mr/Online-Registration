@code {
    [Inject]
    public HttpClient httpClient { get; set; }

    public IEnumerable<ScheduleSlotModel>? schedules;
    public int x = 10;
    public bool emptySlotIndicator;

    protected override async Task OnInitializedAsync()
    {
        schedules = await JsonSerializer.DeserializeAsync<IEnumerable<ScheduleSlotModel>>
        (await httpClient.GetStreamAsync($"Schedule/LastRegistered?studentId={1}&regpid={3}"), new JsonSerializerOptions() { PropertyNameCaseInsensitive = true });

